<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:id="@+id/layout_viewpager_cleardebts_fourth"
    android:background="@android:color/white">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/QuestionClearDebtSumHeaderText"
        android:textStyle="bold"
        android:id="@+id/layout_viewpager_cleardebts_fourth_header"
        android:inputType="textMultiLine"
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:textAlignment="center"
        android:textColor="@android:color/secondary_text_light"
         />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_below="@+id/layout_viewpager_cleardebts_fourth_header"
        android:id="@+id/layout_viewpager_repayment_fourth_sum"
        android:clickable="false"
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/QuestionClearDebtSumInfoText"
        android:id="@+id/layout_viewpager_cleardebts_fourth_infotext"
        android:layout_below="@+id/layout_viewpager_repayment_fourth_sum"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:textAlignment="center"
        android:textColor="@android:color/secondary_text_light"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp" />




</RelativeLayout>