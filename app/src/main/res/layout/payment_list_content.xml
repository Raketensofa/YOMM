<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_border"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="horizontal"

    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/listview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="22.07."
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/listview_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="right"
        android:text="20.00"
        android:layout_toRightOf="@+id/listview_date"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/listview_creditorheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Bezahlt durch:"
        android:layout_toRightOf="@+id/listview_value"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />


    <TextView
        android:id="@+id/listview_creditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="right"
        android:text="Carolin"
        android:layout_below="@+id/listview_creditorheader"
        android:layout_toRightOf="@+id/listview_value"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />


</RelativeLayout>